<%= form_with(model: car) do |form| %>
  <% if car.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(car.errors.count, "error") %> prohibió este carro de ser guardado:</h2>

      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Placa", style: "display: block" %>
    <%= form.text_field :plate, required: true%>
  </div>

  <div>
    <%= form.label "Descripción", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label "Cliente", style: "display: block" %>
    <%= form.collection_select :client_id, Client.all, :id, :name, required: true %>
  </div>

  <br>
  
  <div>
    <% if edit %>
      <%= form.submit "Editar carro" %>
    <% else %>
      <%= form.submit "Crear carro" %>
    <% end %>
  </div>
<% end %>
